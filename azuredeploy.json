{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {

    "interfacename": {
      "type": "string"
    },
    
    "location": {
      "type": "string"
    },

    "subnet_id": {
      "type": "string"
    },

      "newOrExistinglb": {
      "type": "string"
    },

     "newOrExistingplb": {
      "type": "string"
    },

      "Backend_id": {
      "type": "string"
    },

      "PBackend_id": {
      "type": "string"
    },

      "asgId": {
      "type": "string"
    }
  

  },
  "resources": [

{
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "name": "[parameters('interfacename')]",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",

                            "subnet": {
                                "id": "[parameters('subnet_id')]"

                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4",
                            "loadBalancerBackendAddressPools": [
                              
                                {
                                   "id": "[parameters('Backend_id'))]"
                                   // "id": "[if(equals(parameters('newOrExistinglb'),'No'),json('null'),parameters('Backend_id'))]"
                                },
                                                                {
                                    "id": "[parameters('PBackend_id'))]"
                                   // "id": "[if(equals(parameters('newOrExistingplb'),'No'),json('null'),parameters('PBackend_id'))]"
                                }
                            ],
                            "applicationSecurityGroups": [
                                {
                                    "id": "[parameters('asgId')]"
                                }
                            ]
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false
            },
            "metadata": {
                "comments": "RESOURCES metadata comments for the network interface comments."
            }

        }


  ]
}
